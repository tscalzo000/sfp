<div id='background'>
  <h1>Edit Note:</h1>
  <h3>Title: <%= @note.title %></h3>
  <%= form_for [current_user, @note] do |f| %>

    <div>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 20 %>
    </div>

    <%= f.submit id: 'special' %>

  <% end %>
  <%= button_to 'Delete Note', user_note_path(@note), method: :delete, id: 'special'  %>
</div>

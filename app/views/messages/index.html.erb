<div id='background'>
  <h2>Your Conversation with <%= @user.username %></h2>
  <% @messages.each do |message| %>
    <p>
      <% if message.body %>
        <strong><%= message.user.username %></strong> <%= message.message_time %>
          <br /><%= message.body %> <% if message.read === true %> <i>(seen)</i> <% end %>
      <% end %>
    </p>
  <% end %>

  <%= form_for [@conversation, @message] do |f| %>
    <%= f.text_area :body %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit(value='Add Reply', id: 'special') %>
  <% end %>

  <%= link_to 'Back', conversations_path %>
</div>
